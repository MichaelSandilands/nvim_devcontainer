// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/miniconda
{
	"name": "Miniconda (Python 3)",
	"build": { 
		"context": "..",
		"dockerfile": "Dockerfile"
	}

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		// Neovim https://github.com/devcontainers-extra/features/tree/main/src/neovim-homebrew
		"ghcr.io/devcontainers-extra/features/neovim-homebrew:1": {},
		// Ripgrep https://github.com/devcontainers-extra/features/tree/main/src/ripgrep
		"ghcr.io/devcontainers-extra/features/ripgrep:1": {},
		// fd https://github.com/devcontainers-extra/features/tree/main/src/fd
		"ghcr.io/devcontainers-extra/features/fd:1": {},
		// npm https://github.com/devcontainers/features/tree/main/src/node
		// "ghcr.io/devcontainers/features/node:1": {},
		// Quarto CLI https://github.com/rocker-org/devcontainer-features/tree/main/src/quarto-cli
		// "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {},
	},

	"mounts": [
		// Mount the Neovim configuration from the local .devcontainer folder
		// to the user's config directory in the container (~/.config/nvim)
		"source=${localWorkspaceFolder}/.devcontainer/nvim/,target=/home/vscode/.config/nvim,type=bind,consistency=consistent"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "python --version",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
